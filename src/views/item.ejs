<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <title>Detalhes — Biblioteca</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body class="bg-light">
  <div class="container py-4">
    <a href="javascript:history.back()" class="btn btn-sm btn-outline-secondary mb-3">Voltar</a>

    <% if (!item) { %>
      <div class="alert alert-danger">Item não encontrado.</div>
    <% } else { %>
      <div class="row g-4">
        <div class="col-12 col-md-4">
          <div class="card">
            <img src="<%= item.capa ? item.capa : 'https://placehold.co/400x600?text=' + encodeURIComponent(item.titulo) %>" class="card-img-top" alt="Capa">
            <div class="card-body">
              <h5 class="card-title"><%= item.titulo %></h5>
              <p class="text-muted"><%= type === 'BOOK' ? (item.autor || '') : type === 'MOVIE' ? (item.diretor || '') : (item.criador || '') %></p>
            </div>
          </div>
        </div>

        <div class="col-12 col-md-8">
          <h4>Editar <%= type === 'BOOK' ? 'Livro' : type === 'MOVIE' ? 'Filme' : 'Série' %></h4>
          <form method="post" action="/item/<%= type %>/<%= item.id %>/edit">
            <div class="mb-2">
              <label class="form-label">Título</label>
              <input name="titulo" class="form-control" value="<%= item.titulo %>" required>
            </div>

            <% if (type === 'BOOK') { %>
              <div class="mb-2"><label class="form-label">Autor</label><input name="autor" class="form-control" value="<%= item.autor %>" required></div>
              <div class="mb-2"><label class="form-label">Editora</label><input name="editora" class="form-control" value="<%= item.editora || '' %>"></div>
              <div class="mb-2"><label class="form-label">Ano</label><input name="ano_publicacao" type="number" class="form-control" value="<%= item.ano_publicacao || '' %>"></div>
            <% } else if (type === 'MOVIE') { %>
              <div class="mb-2"><label class="form-label">Diretor</label><input name="diretor" class="form-control" value="<%= item.diretor %>" required></div>
              <div class="mb-2"><label class="form-label">Ano</label><input name="ano" type="number" class="form-control" value="<%= item.ano || '' %>"></div>
            <% } else { %>
              <div class="mb-2"><label class="form-label">Criador</label><input name="criador" class="form-control" value="<%= item.criador %>" required></div>
              <div class="mb-2"><label class="form-label">Temporadas</label><input name="temporadas" type="number" class="form-control" value="<%= item.temporadas || '' %>"></div>
              <div class="mb-2"><label class="form-label">Ano início</label><input name="ano_inicio" type="number" class="form-control" value="<%= item.ano_inicio || '' %>"></div>
            <% } %>

            <div class="mb-2">
              <label class="form-label">Capa (URL)</label>
              <input name="capa" class="form-control" placeholder="https://..." value="<%= item.capa || '' %>">
            </div>

            <div class="d-flex gap-2">
              <button class="btn btn-primary">Salvar</button>
              <form method="post" action="/item/<%= type %>/<%= item.id %>/delete" onsubmit="return confirm('Confirma exclusão?')" style="display:inline;">
                <button type="submit" class="btn btn-outline-danger">Excluir</button>
              </form>
            </div>
          </form>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>